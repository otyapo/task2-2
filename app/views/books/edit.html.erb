<body>
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<br>
	<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show", book_path(@book.id) %>
<a>|</a>
<%= link_to "Back", books_index_path(@book.id), class: "back" %>

</body>